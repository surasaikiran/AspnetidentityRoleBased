
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }



        h1 {
            color: #333;
        }

        .review-container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .user-review {
            border-bottom: 1px solid #eee;
            padding: 15px 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .user-info {
            display: flex;
            align-items: center;
        }

        .user-avatar {
            width: 65px;
            height: 65px;
            border-radius: 50%;
            margin-right: 15px;
            overflow: hidden;
        }

            .user-avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .user-details {
            flex-grow: 1;
        }

            .user-details h3 {
                margin: 0;
                color: #333;
            }

            .user-details p {
                margin: 5px 0 0;
                color: #666;
            }

        .user-review .rating {
            display: flex;
            align-items: center;
        }

        .star {
            color: #f39c12;
        }

        .review-text {
            margin-top: 10px;
            color: #555;
        }


        .user-review {
            flex-direction: column;
            align-items: flex-start;
        }

        .user-avatar {
            margin-bottom: 10px;
        }
    </style>
</head>

<body>


    <div class="review-container">
        <!-- User Review 1 -->
        <div class="user-review">
            <div class="user-info">
                <div class="user-avatar">
                    <img src="https://d3njjcbhbojbot.cloudfront.net/api/utilities/v1/imageproxy/https://images.ctfassets.net/wp1lcwdav1p1/4NAwrInfpEhTT3Kti5eMA6/e5e7a301fc824d01dda224830a065135/GettyImages-1341554760.jpg?w=1500&h=680&q=60&fit=fill&f=faces&fm=jpg&fl=progressive&auto=format%2Ccompress&dpr=1&w=1000&h=" alt="User 1">
                </div>
                <div class="user-details">
                    <h3>John Doe</h3>
                    <p>Web Developer</p>
                </div>
            </div>
            <div class="rating">
                <span class="star">★</span>
                <span class="star">★</span>
                <span class="star">★</span>
                <span class="star">★</span>
                <span class="star">★</span>
            </div>
            <div class="review-text">
                <p>Great product! I love it.</p>
            </div>
        </div>

        <!-- User Review 2 -->
        <div class="user-review">
            <div class="user-info">
                <div class="user-avatar">
                    <img src="https://howafrica.com/wp-content/uploads/2023/02/Byron-Jenkins.jpg" alt="User 2">
                </div>
                <div class="user-details">
                    <h3>Jane Smith</h3>
                    <p>Designer</p>
                </div>
            </div>
            <div class="rating">
                <span class="star">★</span>
                <span class="star">★</span>
                <span class="star">★</span>
                <span class="star">★</span>
                <span class="star">☆</span>
            </div>
            <div class="review-text">
                <p>Excellent service. Will recommend to others.</p>
            </div>
        </div>

        <!-- User Review 4 -->
        <div class="user-review">
            <div class="user-info">
                <div class="user-avatar">
                    <img src="https://franklincummings.edu/wp-content/uploads/2022/05/Software-developer_male.jpg" alt="User 2">
                </div>
                <div class="user-details">
                    <h3>Joe</h3>
                    <p>Analyst</p>
                </div>
            </div>
            <div class="rating">
                <span class="star">★</span>
                <span class="star">★</span>
                <span class="star">★</span>
                <span class="star">☆</span>
                <span class="star">☆</span>
            </div>
            <div class="review-text">
                <p>Great product! Excellent service. Will recommend to others.</p>
            </div>
        </div>


    </div>
</body>

</html>


