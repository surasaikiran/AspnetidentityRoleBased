@model IEnumerable<AspnetidentityRoleBased.Models.EmployeeViewModelcs>
@{
    ViewBag.Title = "Index";
    //Layout = null;
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<link href="~/css/Index.css" rel="stylesheet" />
<script src="~/js/jquery-2.1.4.min.js"></script>
<link href="~/css/jquery-ui.min.css" rel="stylesheet" />
<script src="~/lib/jqueryui/jquery-ui.min.js"></script>
<link href="~/lib/datatables/css/jquery.dataTables.css" rel="stylesheet" />
<script src="~/lib/datatables/js/jquery.dataTables.js"></script>

<div class="container" style="width:40%;margin-top:2%">
    <div class="panel-heading">
        <div class="row">
            <div class="col col-xs-6">
                <h3 class="panel-title">Edit the Employeer</h3>
            </div>
            <div class="col col-xs-6 text-right">
                @*<a type="button" class="btn btn-sm btn-primary btn-create" asp-action="SaveRecord" asp-controller="Home">Create New</a>*@
                <a href="#" class="btn btn-primary" onclick="AddEditEmployee(0)">New</a>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <table id="MyDataTable" class="table table-striped table-bordered table-list">
            <thead>
                <tr>
                    <th>EmployeeId</th>
                    <th class="hidden-xs">EmployeeName</th>
                    <th>Address</th>
                    <th>City</th>
                    <!-- Add the following column in the <tbody> section within the foreach loop -->
                </tr>
            </thead>
            <tbody>
                @foreach (var Index in Model)
                {
                    <tr>

                        <td>@Index.EmployeeId</td>
                        <td>@Index.Name</td>
                        <td>@Index.Address</td>
                        <td>@Index.City</td>
                        <td>
                            <a href="#" class="btn btn-info btn-sm" onclick="EditEmployee('@Index.EmployeeId')">Edit</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>


</div>
@section scripts {
    <script>
        $(document).ready(function () {

            $("#MyDataTable").DataTable();
        })

        function EditEmployee(employeeId) {
            window.location.href = '/Employee/Edit/' + employeeId;
        }
    </script>
}